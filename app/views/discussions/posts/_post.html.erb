<%= turbo_frame_tag dom_id(post) do %>
  <div class="card my-4">
    <div class="card-body">
      <%= render partial: "discussions/posts/header", locals: { post: post } %>
      <%= post.body %>
    </div>

    <div class="card-footer">
      <%= link_to "Edit", edit_discussion_post_path(post.discussion, post) %> |
      <%= link_to "Delete", [post.discussion, post], method: :delete, data: { confirm: "Are you sure?" } %>
    </div>
  </div>
<% end %>