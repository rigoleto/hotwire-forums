<%= turbo_frame_tag dom_id(discussion) do %>
  <div class="d-flex align-items-center justify-content-between">
    <div>
      <h1><%= discussion.name %></h1>
      <span class="text-muted fs-6">
        <% if discussion.pinned? %>
          <i class="bi bi-pin-fill"></i> Pinned
        <% end %>
        <% if discussion.closed? %>
          <i class="bi bi-door-closed-fill"></i> Closed
        <% end %>
      </span>
    </div>
    <div>
      <%= link_to "Edit", edit_discussion_path(discussion) %>
      <%= link_to "Delete", discussion, method: :delete, data: { turbo_method: :delete, confirm: "Are you sure?" } %>
    </div>
  </div>
<% end %>